<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="field control">
    <%= form.label :category_id, class:'label'%>
    <%= form.select :category_id, options_for_select(Category.all.collect{|x| [x.name, x.id]}) %>
  </div>

  <div class="field control">
    <%= form.label :title, class:'label'%>
      <%= form.text_field :title, class: 'is-primary', placeholder: "More than two characters "  %>
  </div>

  <div class="field control">
    <%= form.label :body, class:'label'%>
    <%= form.text_area :body, rows:'10', class: 'is-primary', placeholder: "More than two characters "%>
  </div>

  <div class="actions control">
    <%= form.submit class:'button is-success' %>
  </div>

<% end %>
